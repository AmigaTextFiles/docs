      FormatID = 0xF9
      BlocksPerFat = 3
      BlocksPerTrack = 12
      Surfaces = 2
      HiddenSectors = 0
      BigTotalSectorsOnDisk = 0
      PhysicalDriveNumber = 0
      ExtendedBootRecordSignature = 0
      VolumeSerialNumber = 0
      VolumeLabel = MultiDos1.0
##

F9AmigaDss:
      SystemID = MDos1.0
      BytesPerSector = 512
      BlocksPerCluster = 1
      PreAlloc = 1
      NumbersOfFats = 2
      NumberOfRootDirEntries = 112
      TotalBlocksOnDisk = 1968
      FormatID = 0xF9
      BlocksPerFat = 6
