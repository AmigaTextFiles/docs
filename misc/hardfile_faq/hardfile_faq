/* HD floppy with diskspare.device and ProfFileSystem for max capacity */

PDS0:
      Device = diskspare.device
      FileSystem = L:ProfFileSystem
      Unit = 0
      Flags = 0x7           /* Allow HD, Cyl.81, DiskChange */
      Surfaces = 2
      Reserved = 2
      BlockSize = 512
      BlocksPerTrack = 24   /* The device uses this at 24 for HD floppies */
      LowCyl = 0
      HighCyl = 81          /* Floppy drives can usually do this reliably */
      Interleave = 0
      StackSize = 600
      Priority = 10
      GlobVec = -1
      DosType = 0x50465300
      MaxTransfer = 2097152
      Mask = 0x7ffffffe
      BufMemType = 1
      Buffers = 5
      Activate = 1
#


