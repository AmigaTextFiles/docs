      Device = emphf.device
      FileSystem = L:CrossDOSFileSystem
      Unit = 0 
      Flags = 1
      Surfaces = 4
      BlocksPerTrack = 32
      LowCyl = 0  ;  HighCyl = 414 
      Reserved = 0
      Stacksize = 4096
