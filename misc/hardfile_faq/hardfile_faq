      Mask = 0x7FFF
      Unit = 2
      Flags = 0
      Surfaces = 1
      Reserved = 0
      Interleave = 0
      BlocksPerTrack = 1600
      LowCyl = 0  ;  HighCyl = 0
      Stacksize = 2000
      Priority = 5
      GlobVec = -1
      DosType = 0x4D414300
      Buffers = 30
      BufMemType = 4
      BootPri = -1
      Mount = 1
#

