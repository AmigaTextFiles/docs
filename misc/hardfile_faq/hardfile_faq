      Surfaces = 2
      Reserved = 2
      BlockSize = 512
      BlocksPerTrack = 24   /* The device uses this at 24 for HD floppies */
      LowCyl = 0
      HighCyl = 39          /* Floppy drives can usually do this reliably */
      Interleave = 0
      StackSize = 600
      Priority = 10
      GlobVec = -1
      DosType = 0x444F5301
      Buffers = 5
      BufMemType = 0
      Activate = 1
#


/* Lower half of HD floppy w/diskspare.device for max AmigaDOS capacity */

FJA:
      Device = diskspare.device
      FileSystem = L:FastFileSystem
      Unit = 0
      Flags = 0x5           /* Allow HD, No Cyl.81, Allow DiskChange */
      Surfaces = 2
      Reserved = 2
      BlockSize = 512
      BlocksPerTrack = 24   /* The device uses this at 24 for HD floppies */
      LowCyl = 0
      HighCyl = 39
      Interleave = 0
      StackSize = 600
      Priority = 10
      GlobVec = -1
      DosType = 0x444F5301
      Buffers = 5
      BufMemType = 0
      Activate = 1

#


