/* Mountlist for lower half of a HD floppy disk in drive DF0 w/v1.3 FFS */

DFA:
      Device = trackdisk.device
      FileSystem = L:OFFSFileSystem
      Unit   = 0
      Flags  = 1
      Surfaces  = 2
      BlocksPerTrack = 22
      Reserved = 2
      Interleave = 0
      LowCyl = 0  ;  HighCyl = 39
      Buffers = 22
      BufMemType = 3
      GlobVec = -1
#


