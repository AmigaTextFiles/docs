/* Show Interview by Rafal K.*/

OPTIONS RESULTS

year='2002'
lang='EN'

GETFIELD year
IF result="False" THEN
DO
    DisplayBeep
    EXIT
END

GETFIELD 'firstname'
firstname=result

GETFIELD 'lastname'
lastname=result

GETPROGRAMDIRNAME
programdir=result

GETPROJECTDIRNAME
projectdir=result

file=programdir""projectdir""year"/"firstname""Left(lastname,1)"_"lang".txt"

IF EXISTS(file)='False' THEN
DO
    DisplayBeep
    EXIT
END

ADDRESS

"C:Run >NIL: SYS:Utilities/Multiview "file

