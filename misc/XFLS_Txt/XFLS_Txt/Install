; Installer Script For XFLS.Text

(set #StarBase_dir (cat "Select Your StarBase_SCR Main Directory\n"
                        "** A Drawer Will NOT Be Created **"))

(set #done (cat "\nXFLS.Text Has Been Installed\n\n"))

(complete 0)

(set StarBase_def_dir "Work:StarBase")

(set StarBase_dir
 (askdir
  (default StarBase_def_dir)
  (prompt #StarBase_dir)
  (help @askdir-help)
 )
)

(complete 10)

(set Data_dir (tackon StarBase_dir "Data"))

(complete 20)

(copyfiles
 (
  (prompt "Install XFLS.Text File")
  (source "Data")
  (help @copyfiles-help)
  (dest Data_dir)
  (choices "XFLS.Text")
  (confirm)
 )
)

(complete 90)

(copyfiles
 (
  (prompt "Install Run_XFLS File")
  (source "Data")
  (help @copyfiles-help)
  (dest StarBase_dir)
  (choices "Run_XFLS" "Run_XFLS.info")
  (confirm)
 )
)

(complete 100)

(message #done "\"" StarBase_dir "\"")

(exit (QUIET))
