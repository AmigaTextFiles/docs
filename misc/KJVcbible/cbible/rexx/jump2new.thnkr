/* open 2 new windows to anchor statement */
options results
trace off
address 'Thinker'
get filename
fn = result
'window id '
wid = result
get blocknumber
bn = result
window open '0,100,640,100'
jump origin fn
jump label first  '0' || bn || 'b'
window open '0,0,625,132'
jump origin fn
jump label first  '0' || bn || 'b'
window close wid

