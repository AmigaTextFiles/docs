echo " "
echo "                   ======================================"
echo "                   | Guide de l'Interface Clavier ELBOX |"
echo "                   ======================================"
echo " "
echo "   Afin de pouvoir afficher les documents inclus, il faut indiquer au système"
echo " "
echo "où se trouve le tiroir: 'ALEM_0023' , ainsi que l'afficheur: 'Multiview'..."
echo " "
echo " "


IF $workbench GE "39.29"
 SKIP OS3
 ELSE
 SKIP NoOS3
ENDIF
SKIP Fin


LAB NoOs3
echo "    Votre système étant < WB3.0,il  vous faudra faire ces assignations manuel"
echo "    lement, puis cliquer sur le fichier 'ElboxKBDcard.guide' ..."
echo " "
ASK "    ... Appuyer sur 'ENTER' pour fermer cette fenêtre ..."
ENDCLI


LAB Os3
SETENV Tiroir "RAM:ALEM_0023"
SETENV Lecteur "SYS:utilities/Multiview"
ASK "    ... Appuyer sur 'ENTER' pour choisir les assignations ..."
REQUESTFILE Drawer RAM:ALEM_0023 Title "Endroit de 'ALEM_0023' ?" POSITIVE Ok NEGATIVE Annuler DRAWERSONLY >ENV:Tiroir
REQUESTFILE Drawer SYS:Utilities FILE Multiview Title "Lecteur Amigaguide ?" POSITIVE Ok NEGATIVE Annuler >ENV:Lecteur
ASSIGN ALEM_0023: $Tiroir
ASSIGN Multiview: $Lecteur
CD $Tiroir
echo " "
echo "    ... Assignations réalisées. Veuillez patienter ..."
Multiview ALEM_0023:ElboxKBDcard.guide
Endcli
