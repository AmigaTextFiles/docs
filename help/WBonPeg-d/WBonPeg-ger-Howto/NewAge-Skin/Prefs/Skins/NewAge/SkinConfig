;prop gadget colors

PROPGADGETKNOBCOL        0x5577AA

;----------------------------- MENU CONFIGURATION --------------------------------

MENULOOK        MENU_FRAMESFX, MENU_NOFRAMES, MENU_TRANSPARENCY, MENU_TRANSPBLUR, MENU_SHADOWS, MENU_DISABLEDSHADOW

;MENULOOK switches:
;MENU_NOFRAMES - active item has no frames
;MENU_FRAMESFX - frames have alpha transparency
;MENU_DISABLEDFX - use an effect on a disabled item
;MENU_DISABLEDSHADOW - shadow text of disabled items (turns off DISABLEDFX and pattern)
;MENU_ACTIVEFX - use effect instead of color for active items background

;strenght of brighten/darken effect on edges when MENU_FRAMESFX is set

MENUBRIGHTEDGE        80
MENUDARKEDGE        100

;used when MENU_ACTIVEFX is set

MENUBARACTIVEEFFECT        TINTFADE
MENUBARACTIVEEFFECTDATA        0x909CF9
MENUITEMACTIVEEFFECT        TINTFADE
MENUITEMACTIVEEFFECTDATA    0xB09878

;used when MENU_DISABLEFX is set

MENUDISABLEDEFFECT        BLUR
MENUDISABLEDEFFECTDATA        0

;will be added to menu layout calculations so you can adjust menu look here

MENUTEXTEXTRALEFT 3
MENUTEXTEXTRARIGHT 2
MENUTEXTEXTRATOP 2
MENUTEXTEXTRABOTTOM 2

MENUWINDOWEXTRALEFT 3
MENUWINDOWEXTRARIGHT 2
MENUWINDOWEXTRATOP 2
MENUWINDOWEXTRABOTTOM 2

MENUTRANSPARENCYLEVEL 20


;------------------------------- WINDOW BORDERS ----------------------------------

WINDOWLOOK        WINDOW_FRAMESFX,WINDOW_1TO1FRAMES

;WINDOWLOOK switches:
;WINDOW_NOGADGETSIMULATION - ????
;WINDOW_FRAMESFX - use brighten/darken effects on border frames
;WINDOW_GRADIENT - use gradient instead of static color when bitmaps are not loaded
;WINDOW_1TO1FRAMES - use 1:1 frames instead of default 1:2 ones
;WINDOW_CENTERTITLE - center window title (relative)
;WINDOW_ROUNDEDEDGES - titlebar edges get rounded (transparent)

;strenght of brighten/darken effect on border frames when WINDOW_FRAMESFX is set

WINDOWBRIGHTEDGE        90
WINDOWDARKEDGE            90

;titlebar size change by [x] pixels (may also affect screen titlebar size!)

WINDOWTITLEBARINCREMENT     -2

;shift title text down by [x] pixels

WINDOWTITLETEXTSHIFT	 -2

;------------------------------- SCREEN TITLEBAR ---------------------------------

STITLEBARLOOK STITLEBAR_NOTRIM

;shift title text down by [x] pixels

STITLEBARTITLETEXTSHIFT    -2

;position clock by [x] pixels from right edge of screen

STITLEBARCLOCKPOS        20

;------------------------------- PROP GADGETS ------------------------------------

;prop gadget colors
;PROPGADGETKNOBCOL		0x5577AA
;BORDERPROPGADGETKNOBCOL 0xFF8800

;------------------------------- PROP SCROLLERS ----------------------------------

PROPLOOK PROP_ENABLEFX,PROP_KNOBROUNDED,PROP_KNOBLINES,PROP_NOPATTERN,PROP_THINBACK,PROP_BORDERLOOK

;PROPLOOK switches:
;PROP_ENABLEFX - enable new style props
;PROP_KNOBLINES - draw lines in the middle of knob
;PROP_KNOBCIRCLE - draw a circle in the middle of knob
;PROP_KNOBROUNDED - make the knob rounded
;PROP_KNOBDOUBLEFRAME - double frame in knob
;PROP_THINBACK - use a thin background (usualy 2 pix wide)
;PROP_BORDERLOOK - scrollers inside window borders look like onborder ones
;PROP_NOPATTERN - don't draw standard background pattern

;background (not used by knob)

PROPBACKGROUNDDARK 70

;knob edges

PROPBIRGHTEDGE 40
PROPDARKEDGE 40

;active knob effect

PROPACTIVEBRIGHT 20

