.key GROUP/A,EXPDAYS,EXPARTS
.bra [
.ket ]

.def EXPDAYS 21
.def EXPARTS 2000

; $VER: New_NewsGroup 1.0 (5.7.95) Arndt van der Molen

;Create an empty file if not existing because 'newgroup' want to read it first
IF NOT EXISTS UULIB:News/Active
  echo >UULIB:News/Active
ENDIF

echo "*NAdding newsgroup to 'UULIB:News/Active' for NNTP ...*N"
INet:c/newgroup UULIB:News/Active [GROUP]
echo ""

echo "Adding newsgroup with expiry of [EXPDAYS] days and max. [EXPARTS] articles*Nto 'UULIB:Newsgroups' for UUCP ...'*N"
echo >>UULIB:NewsGroups "[GROUP] [EXPDAYS] [EXPARTS]"

echo "You are now subscribed to '[GROUP]'.*N"
