
; $VER: StartNet AmiTCP 4.0Demo 1.0 (5.7.95) Arndt van der Molen

online ppp0

; log in
echo
echo login: newbie

AmiTCP:bin/login -f newbie
AmiTCP:bin/umask 022
AmiTCP:AmiTCP
WaitForPort AMITCP

; Configure loop-back device
AmiTCP:bin/ifconfig lo0 localhost

; Configure ppp0
AmiTCP:bin/ifconfig ppp0 $ppp0iplocal $ppp0ipremote

; Add route to this host
AmiTCP:bin/route add $ppp0iplocal localhost

; Add default route to ISP
AmiTCP:bin/route add default $ppp0ipremote

setenv HOSTNAME `AmiTCP:bin/hostname`

Assign TCP: Exists > NIL:
IF Warn
  Mount TCP: from AmiTCP:devs/Inet-Mountlist
EndIf

; Start the internet `super server'
run AmiTCP:bin/inetd

; Start the user configurable programms if available
If Exists AmiTCP:db/User-Startnet
  Execute AmiTCP:db/User-Startnet
EndIf
