.key FROM/A,TO/A
.bra {
.ket }

; $VER: MOVE 1.5 (26.12.94) © by Thorsten Willert
; Ein MOVE (Schiebe)-Befehl für AmigaDOS

FailAt 21

ECHO ""

RENAME >NIL: {FROM} TO {TO}
IF WARN
 IF NOT EXISTS {FROM}
  ECHO "{FROM} kann nicht verschoben werden: Objekt nicht gefunden.*N"
  QUIT 20
 ENDIF
 IF EXISTS {TO}
  SKIP Existiert
 ENDIF
ELSE
 SKIP Ende
ENDIF

LAB Existiert
ECHO "{FROM} wurde nicht verschoben: Zielobjekt existiert schon!*N"

ASK "*E[1m{FROM} trotzdem verschieben?*E[0m (Y/N)"
IF WARN
 Skip Ende
ELSE
 ECHO "{FROM} wurde nicht verschoben: Benutzer Abbruch.*N"
 QUIT
ENDIF

LAB Ende
COPY >NIL: {FROM} TO {TO} ALL CLONE
DELETE >NIL: {FROM} FORCE ALL
ECHO "{FROM} wurde verschoben nach {TO}.*N"

