ZIP0:	Device = <scsi.device>
	Unit = <6>
	Flags = 0x0
	Surfaces = 1
	BlockSize = 512
	BlocksPerTrack = 68
	Reserved = 2
	Interleave = 0
	LowCyl = 2
	HighCyl = 2890
	Buffers = 30
	BufMemType = 0
	DOSType = 0x444f5303
	MaxTransfer = 16777215
