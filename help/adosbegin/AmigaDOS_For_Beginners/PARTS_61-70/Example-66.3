; Example-66.3

LAB Start

SET Selection `REQUESTCHOICE "This is a test of REQUESTCHOICE" "Please Click on a Button" "Yes" "No" "Maybe" "Never in a Million Years" "Quit"`
ECHO "You selected " NOLINE

IF $Selection EQ 0
  ECHO "QUIT - Bye Bye"
  UNSET Selection
  QUIT
ENDIF

IF $Selection EQ 1
  ECHO "Yes"
ENDIF

IF $Selection EQ 2
  ECHO "No"
ENDIF

IF $Selection EQ 3
  ECHO "Maybe"
ENDIF

IF $Selection EQ 4
  ECHO "Never in a million years"
ENDIF

SKIP BACK Start
