;NComm script that demonstrates three different ways to count from 1 to 100

SET $sum="0"

WHILE !$sum == "100" DO
    SET $sum = $sum+"1"#
    MESSAGE "While: "$sum"\n"
ENDWHILE

SET $sum="0"

REPEAT
    SET $sum = $sum+"1"#
    MESSAGE "Repeat: "$sum"\n"
UNTIL $sum == "100"

SET $sum="0"

SUM: SET $sum = $sum+"1"#
     MESSAGE "Goto: "$sum"\n"
     IF !$sum == "100" THEN GOTO SUM
