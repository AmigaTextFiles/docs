echo "This script will install and prepare NComm for use with OS 2.0 or above."
echo "Setting up NComm: assignment ..."
assign NComm:
assign NComm: ""

makedir ram:NCommTemp                ;Make a temporary directory
failat 100

copy >nil: libs/#? ram:NCommTemp ;Copy to temporary dir

makedir >nil: ram:NCommTemp/fonts

copy >nil: fonts/#? ram:NCommTemp/fonts ALL
                                     ;Change Directory to temp
cd ram:NCommTemp

echo "Installing XPRZmodem.library in libs: ..."
copy xprzmodem.library libs:

echo "Installing XPRKermit.library in libs: ..."
copy xprkermit.library libs:

echo "Installing ReqTools.library in libs: ..."
copy reqtools.library.os20 libs:reqtools.library

echo "Installing IBM fonts in fonts: ..."

copy >nil: ram:NCommTemp/fonts/#? fonts: ALL

cd NComm:
delete >nil: ram:NCommTemp ALL       ;Delete temporary dir and files

echo "All done. You may have to reset your machine if old libraries are in memory..."
endcli                               ;Needed for XIcon
