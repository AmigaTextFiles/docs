; check classes script
; By Michaela Prüß - modified by Stuart Kelly

RequestChoice TITLE "Check Classes " GADGETS "Yes|No" BODY "This script requires VersCheck. Check Classes ?" >ENV:CC_VAR

IF $CC_VAR EQ 1
stack 500000

echo "- Begining Version Checking..."

VersCheck -afnsv -0s .class -0l ClassList -0n CLASS MUI:
VersCheck -afmv -0s .class -0l ClassList -0n CLASS Sys:Classes
echo "- .class Done"

VersCheck -afnsv -0s .image -0l ImageList -0n ClassIMG MUI:
VersCheck -afmv -0s .image -0l ImageList -0n ClassIMG Sys:Classes
echo "- .image Done"

VersCheck -afnsv -0s .gadget -0l GadgetList -0n CLASSGAD MUI:
VersCheck -afmv -0s .gadget -0l GadgetList -0n CLASSGAD Sys:Classes
Echo "- .gadget Done"

VersCheck -afnsv -0s .codec -0l CodecList -0n CLASSCOD MUI:
VersCheck -afmv -0s .codec -0l CodecList -0n CLASSCOD Sys:Classes
echo "- .codec Done"

VersCheck -afnsv -0s .decoder -0l DecoderList -0n CLASSDEC MUI:
VersCheck -afmv -0s .decoder -0l DecoderList -0n CLASSDEC Sys:Classes
echo "- .decoder Done"

echo "- Scanning Finished"
echo ""
echo "- Check RAM: for the files.  Please send them to me"
ENDIF

DELETE ENV:CC_VAR >NIL:

