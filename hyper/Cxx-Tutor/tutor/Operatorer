@DATABASE CXX-Tutor.guide
@SMARTWRAP
@TAB 4

@node Main "Operatore"

	@{b}Aritmetiske operatore@{ub}

*	Multiplikation

/	Division

%	Modulus

+	Addition

-	Subtraktion

*=	Tildelings multiplikation

/=	Tildelings division

%=	Tildelings modulus

+=	Tildelings addition

-=	Tildelings subtraktion

	Syntaksen er, som i BASIC, den almindelige aritmetiske.

@{CODE}
@{I}@{U}Eksempler : @{UU}@{UI}

a = a*c;
a *=  c;

a = a/c;
a /=  c;

a = a%c;
a %=  c;

a = a+c;
a +=  c;

a = a-c;
a -=  c;
@{BODY}


	@{b}Logiske operatore@{ub}

&&	Logisk and

||	Logisk or

@{CODE}
@{I}@{U}Eksempler : @{UU}@{UI}
if (a && b)
if (a || b)
@{BODY}


	@{b}Forholds operatore@{ub}

<	Mindre end

>	Større end

<=	Mindre eller ligmed

>=	Større eller ligmed

==	Er ligmed

!=	Er ikke ligmed

@{CODE}
@{I}@{U}Eksempler : @{UU}@{UI}
if (a<b)
if (a>b)
if (a<=b)
if (a>=b)
if (a==b)
if (a!=b)
@{BODY}


	@{b}Bit operatore@{ub}

&	And

|	Or

^	Xor

!	Not

<<	Venstre shift

>>	Højre shift

@{CODE}
@{I}@{U}Eksempler : @{UU}@{UI}
a = a & 0xff;
a = a | 0x10;
a = a ^ 0xff;
a = !b;
a = b << 1;
a = b >> 1;
@{BODY}


  Jeg vil lige nævne shift ( << og >> ) som skifter bitsene et vist antal positioner til venstre eller højre.

1111111111111111 >> 4 = 0000111111111111

0000111111111111 >> 4 = 0000000011111111

0000000011111111 >> 4 = 0000000000001111

0000000000001111 >> 4 = 0000000000000000


0000000000000001 << 4 = 0000000000010000

0000000000010000 << 4 = 0000000100000000

0000000100000000 << 4 = 0001000000000000

0001000000000000 << 4 = 0000000000000000



	@{b}Scope operator  ::@{ub}

	Scope operator  ::  (dobbelt kolon).
Betyder en global funktion hvis der ikke står noget før scope , eller hvilken klasse funktionen er en del af, hvis der står noget foran scope.
Indikerer for funktioner , at det ikke er en del af klassen og for en variabel at den ikke er en del af funktionen / klassen.

@{CODE}
@{U}@{I}Eksempel : @{UI}@{UU}
#include <iostream.h>

// Denne funktion er ikke en del af koordinat klassen nedenunder,
// Selvom koordinat klassen @{I}også @{UI}har en funktion ved navn
// SkrivKoordinat
void 	SkrivKoordinat(int x, int y)
{
	cout<<"X:"<<x<<" Y:"<<y<<endl;
}

class	Koordinat
{
	private:
	int	x;
	int	y;

	public:
			Koordinat(int x_co, y_co){x = x_co; y = y_co}
			~Koordinat(){}
	void	SkrivKoordinat()
	{
		// :: indikerer at det ikke er medlemsfunktionen
		// SkrivKoordinat men i stedet den der er defineret
		// i starten af programmet
		// Hvis vi undlader scope ( :: ) foran SkrivKoordinat
		// Ville vi istedet kalde Koordinat::SkrivKoordinat();
		::SkrivKoordinat(x,y);
	}
	void	Status()
	{
		// Koordinat:: indikerer at det er medlemsfunktionen
		// dvs. funktionen lige ovenover.
		Koordinat::SkrivKoordinat();
		
		// Hvis intet er specificeret, går compileren ud
		// fra at der er tale om en medlemsfunktion.
		// Vi kan derfor nøjes med at skrive:
		// SkrivKoordinat();
	}
}


	@{B}Conditional operator@{UB}

	(logisk udtryk) ? sand_værdi : falsk_værdi
@{CODE}
@{U}@{I}Eksempler : @{UU}@{UI}

// Tildeler max variablen den maksimale værdi af variablerne a og b
max = (a>b)?a:b;

// Tildeler min variablen den minimale værdi af variablerne a og b
min = (a<b)?a:b;
@{BODY}
	
@endnode
