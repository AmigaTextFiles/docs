; StarOcean Guide Startup Script

ECHO "*n*e[1m*e[4mStarOcean Help Guide VERSION 0.9*n*nCOPYRIGHT © DAVID CRAWFORD 1999*e[0m"

ECHO "*nNow loading the document"
ECHO "*nWINDOW WILL CLOSE IN A SEC"

WHICH >Nil: Multiview

IF NOT WARN

  RUN >Nil: Multiview StarOcean.guide

  SKIP End

ENDIF

WHICH >Nil: Amigaguide

IF NOT WARN

  RUN >Nil: Amigaguide StarOcean.guide

  SKIP End

ENDIF

ECHO "*nNeither MULTIVIEW nor AMIGAGUIDE have been found in your system's path."
ECHO "Please make sure that you have one of these programs properly located in your path."

ASK "*nPRESS THE RETURN KEY TO CONTINUE"

LAB End

WAIT 2 SECS

ENDCLI
