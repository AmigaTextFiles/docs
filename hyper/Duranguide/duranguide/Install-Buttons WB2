; amigaguide buttons

unset Match

version >NIL: version 36
if WARN
    echo ""
    echo "You need at least version 2.04 of the operating system to run Amigaguide"
    quit
    endif

set choice `extras/RequestChoice "Button Installation" "There are two types of button available, the OLD style*NAmigaguide buttons or NEW style HTML buttons. Select:" " OLD | NEW |Cancel"`

if $choice EQ 0
    quit
    endif

if $choice EQ 1   ; old type buttons
    copy extras/pens.old env:amigaguide/pens
    copy extras/text.old env:amigaguide/text
    copy extras/amigaguide.library.old libs:amigaguide.library
    EndIf

if $choice EQ 2   ; new type buttons
    copy extras/pens env:amigaguide/pens
    copy extras/text env:amigaguide/text
    copy extras/amigaguide.library.old libs:amigaguide.library
    endif


