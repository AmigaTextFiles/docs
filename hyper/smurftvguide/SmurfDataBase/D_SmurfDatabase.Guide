   @{"Schlaubi Schlumpf's Studie über die Technik der Komödie" link "D_7019"}
   @{"Das Buch der Überraschungstechnik" link "D_7019"}
   @{"Schlaubi Schlumpf's Wegweiser zur Dorfsicherheit" link "D_7019"}
